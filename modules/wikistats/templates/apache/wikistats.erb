<VirtualHost *:80>

    ServerName wikistats-cloud-vps

    DocumentRoot /var/www/wikistats

    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>

    <Directory /var/www/wikistats/>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Require all granted
    </Directory>

    ErrorLog /var/log/apache2/error.log
    LogLevel warn
    CustomLog /var/log/apache2/access.log wmf
    ServerSignature On

</VirtualHost>

