##
## This file is managed by puppet.
## Any local changes will be swiftly overwritten
##
## Most cloud-vps projects can make persistent changes to apt sources
## by adding a new .list file in /etc/apt/sources.list.d.
##
## Some cloud-vps projects have 'profile::apt::purge_sources'
## set to 'true', in which case apt sources can only be managed
## via puppet.
##

deb http://<%= @mirror %>/debian/ <%= @facts['os']['distro']['codename'] %> main contrib non-free
deb-src http://<%= @mirror %>/debian/ <%= @facts['os']['distro']['codename'] %> main contrib non-free

deb http://security.debian.org/debian-security <%= @facts['os']['distro']['codename'] %>-security main contrib non-free
deb-src http://security.debian.org/debian-security <%= @facts['os']['distro']['codename'] %>-security main contrib non-free

# -updates, previously known as 'volatile'
deb http://<%= @mirror %>/debian/ <%= @facts['os']['distro']['codename'] %>-updates main contrib non-free
deb-src http://<%= @mirror %>/debian/ <%= @facts['os']['distro']['codename'] %>-updates main contrib non-free

