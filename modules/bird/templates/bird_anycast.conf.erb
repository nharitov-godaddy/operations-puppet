include "/etc/bird/anycast-prefixes.conf";
<% if @do_ipv6 -%>
include "/etc/bird/anycast6-prefixes.conf";
<% end -%>

router id <%= @ipv4_src %>;

protocol direct {
    interface "*";
    ipv4 {
        export all;
    };
}
<% if @do_ipv6 -%>
protocol direct {
    interface "*";
    ipv6 {
        export all;
    };
}
<% end -%>

protocol kernel {
    ipv4 {
        import none;
    };
}
<% if @do_ipv6 -%>
protocol kernel {
    ipv6 {
        import none;
    };
}
<% end -%>

protocol device {
}

function match_route()
{
    return net ~ ACAST_PS_ADVERTISE;
}
<% if @do_ipv6 -%>
function match_route6()
{
    return net ~ ACAST6_PS_ADVERTISE;
}
<% end -%>

filter vips_filter {
    if ( net.len = 32 && net !~ 203.0.113.1/32 && match_route() ) then {
        accept;
    }
    else {
        reject;
    }
}
<% if @do_ipv6 -%>
filter vips6_filter {
    if ( net.len = 128 && net !~ 2001:db8::1/128 && match_route6() ) then {
        accept;
    }
    else {
        reject;
    }
}
<% end -%>

<% if @bfd -%>
protocol bfd {
    interface "*" {
        interval 300 ms;
        multiplier 3;
    };
<% if @multihop -%>
    multihop {
        interval 300 ms;
        multiplier 3;
    };
<% end -%>
}
<% end -%>

<% @neighbors_v4.each do |neighbor_v4| -%>
protocol bgp {
<% if @multihop -%>
    multihop;
<% end -%>
<% if @bfd -%>
    bfd yes;
<% end -%>
    ipv4 {
        import none;
        export filter vips_filter;
    };
    local <%= @ipv4_src %> as 64605;
    neighbor <%= neighbor_v4 %> external;
}
<% end -%>

<% if @do_ipv6 -%>
<% @neighbors_v6.each do |neighbor_v6| -%>
protocol bgp {
<% if @multihop -%>
    multihop;
<% end -%>
<% if @bfd -%>
    bfd yes;
<% end -%>
    ipv6 {
        import none;
        export filter vips6_filter;
    };
    local <%= @ipv6_src %> as 64605;
<% if ! @multihop -%>
    neighbor <%= neighbor_v6 %>%<%= @facts['networking']['primary'] %> external;
<% else -%>
    neighbor <%= neighbor_v6 %> external;
<% end -%>
}
<% end -%>
<% end -%>
