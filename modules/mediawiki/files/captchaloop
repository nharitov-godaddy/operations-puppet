#!/bin/bash

/usr/local/bin/mwscript extensions/ConfirmEdit/maintenance/GenerateFancyCaptchas.php enwiki --wordlist=/etc/fancycaptcha/words --font=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf --blacklist=/etc/fancycaptcha/badwords --fill=900 --delete --threads=4

for i in 1800 2700 3600 4500 5400 6300 7200 8100 9000 9900; do
	/usr/local/bin/mwscript extensions/ConfirmEdit/maintenance/GenerateFancyCaptchas.php enwiki --wordlist=/etc/fancycaptcha/words --font=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf --blacklist=/etc/fancycaptcha/badwords --fill=$i --threads=4
done
